<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/photoListFragment">

    <fragment
        android:id="@+id/photoListFragment"
        android:name="com.nicholasdoglio.eyebleach.features.photolist.PhotoListFragment"
        android:label="PhotoListFragment">
        <action
            android:id="@+id/open_details"
            app:destination="@id/photoDetailFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
        <action
            android:id="@+id/openAbout"
            app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
        android:id="@+id/photoDetailFragment"
        android:name="com.nicholasdoglio.eyebleach.features.photodetail.PhotoDetailFragment"
        android:label="PhotoDetailFragment">
        <argument
            android:name="post"
            app:argType="com.nicholasdoglio.eyebleach.data.RedditPost" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.nicholasdoglio.eyebleach.features.about.AboutFragment"
        android:label="AboutFragment">
        <argument
            android:name="data"
            app:argType="com.mikepenz.aboutlibraries.LibsBuilder" />
    </fragment>
</navigation>